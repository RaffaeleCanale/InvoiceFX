<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import org.pdfsam.ui.RingProgressIndicator?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.wx.invoicefx.ui.views.settings.cards.UpdateController"
      spacing="10">


    <BorderPane>
        <left>
            <Label fx:id="statusLabel" graphicTextGap="8" contentDisplay="RIGHT">
                <graphic>
                    <RingProgressIndicator fx:id="progressIndicator" prefHeight="32.0" prefWidth="32.0" maxHeight="32"
                                           maxWidth="32"
                                           minWidth="32" minHeight="32" visible="false"/>
                </graphic>
            </Label>
        </left>
        <right>
            <Button fx:id="actionButton" onAction="#onAction"/>
        </right>
    </BorderPane>

</VBox>
