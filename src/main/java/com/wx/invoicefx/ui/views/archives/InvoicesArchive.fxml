<?xml version="1.0" encoding="UTF-8"?>

<?import com.wx.invoicefx.ui.components.NumberTextField?>
<?import com.wx.invoicefx.ui.components.sort.SortLabel?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<?import org.pdfsam.ui.RingProgressIndicator?>
<Stage title="%stage.invoices_archive.title" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="com.wx.invoicefx.ui.views.archives.InvoicesArchiveController">
    <scene>
        <Scene>
            <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                        prefHeight="750.0" prefWidth="900.0">
                <top>
                    <MenuBar BorderPane.alignment="CENTER" styleClass="custom-menu-bar">
                        <Menu text="%stage.invoices_archive.menu.file">
                            <MenuItem onAction="#openDirectoryExplorer" fx:id="openDirectoryItem"
                                      text="%stage.invoices_archive.menu.item_file.open_directory"/>
                            <MenuItem onAction="#openAdvancedView"
                                      text="%stage.invoices_archive.menu.item_file.advanced_view"/>
                            <SeparatorMenuItem/>
                            <MenuItem onAction="#close" text="%stage.invoices_archive.menu.item_file.close"/>
                        </Menu>
                        <Menu text="%stage.invoices_archive.menu.backup" fx:id="backupMenu">
                        </Menu>
                    </MenuBar>
                </top>
                <center>
                    <StackPane>
                        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" fx:id="contentPane">
                            <top>
                                <VBox BorderPane.alignment="CENTER" spacing="20">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                    </padding>
                                    <FlowPane fx:id="typePane" alignment="CENTER">
                                        <HBox styleClass="setting-card" spacing="10">
                                            <Label fx:id="typeLabel"/>
                                            <!--<Button styleClass="right-button" text="Restore this backup" prefHeight="64" />-->
                                        </HBox>
                                        <!--<padding>-->
                                        <!--<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>-->
                                        <!--</padding>-->
                                    </FlowPane>


                                    <HBox spacing="10.0">
                                        <TextField prefWidth="400.0"
                                                   promptText="%stage.invoices_archive.prompt.search"
                                                   fx:id="searchField" styleClass="custom-text-field"/>
                                        <ToggleButton fx:id="advancedSearchButton"
                                                      text="%stage.invoices_archive.button.advanced_search"
                                                      styleClass="custom-toggle-button, right-button"/>
                                    </HBox>
                                    <VBox fx:id="advancedSearchPane" maxHeight="0" minHeight="0" opacity="0"
                                          spacing="10.0" styleClass="invoice-viewer-advanced-pane" prefWidth="400">
                                        <FlowPane hgap="10.0">
                                            <Label text="%stage.invoices_archive.label.client_search"/>
                                            <fx:include
                                                    source="../../components/suggestion/itemized/overlay/ItemizedSuggestionPane.fxml"
                                                    fx:id="clientSearchPane"/>
                                        </FlowPane>
                                        <FlowPane>
                                            <CheckBox fx:id="afterDateBox" contentDisplay="RIGHT"
                                                      text="%stage.invoices_archive.label.after_date_search"
                                                      styleClass="custom-check-box">
                                                <graphic>
                                                    <DatePicker fx:id="afterDatePicker"
                                                                styleClass="custom-date-picker"/>
                                                </graphic>
                                            </CheckBox>
                                            <Separator orientation="VERTICAL">
                                                <FlowPane.margin>
                                                    <Insets left="40.0" right="40.0"/>
                                                </FlowPane.margin>
                                            </Separator>
                                            <CheckBox fx:id="beforeDateBox" contentDisplay="RIGHT"
                                                      text="%stage.invoices_archive.label.before_date_search"
                                                      styleClass="custom-check-box">
                                                <graphic>
                                                    <DatePicker fx:id="beforeDatePicker"
                                                                styleClass="custom-date-picker"/>
                                                </graphic>
                                            </CheckBox>
                                        </FlowPane>
                                        <FlowPane hgap="10.0">
                                            <Label text="%stage.invoices_archive.label.lower_bound_price_search"/>
                                            <NumberTextField fx:id="sumLowerBoundField"
                                                             styleClass="custom-text-field"/>
                                            <Label text="%stage.invoices_archive.label.upper_bound_price_search"/>
                                            <NumberTextField fx:id="sumUpperBoundField"
                                                             styleClass="custom-text-field"/>
                                        </FlowPane>
                                        <padding>
                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                        </padding>
                                    </VBox>
                                </VBox>
                            </top>
                            <center>
                                <VBox alignment="TOP_CENTER">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="0.0"/>
                                    </padding>

                                    <HBox styleClass="invoices-viewer-table-header" alignment="CENTER">
                                        <Label text="%stage.invoices_archive.label.sort_by" prefWidth="150">
                                            <padding>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                            </padding>
                                        </Label>
                                        <SortLabel fx:id="idSortLabel" text="%stage.invoices_archive.label.sort_id"/>
                                        <SortLabel fx:id="dateSortLabel"
                                                   text="%stage.invoices_archive.label.sort_date"/>
                                        <SortLabel fx:id="sumSortLabel" text="%stage.invoices_archive.label.sort_sum"/>
                                        <!--<padding>-->
                                        <!--<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>-->
                                        <!--</padding>-->
                                    </HBox>
                                    <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS"
                                                styleClass="invoices-archive-scroll-pane">
                                        <content>
                                            <ListView fx:id="invoicesList"/>
                                        </content>
                                    </ScrollPane>


                                </VBox>
                            </center>
                        </BorderPane>
                        <RingProgressIndicator fx:id="progressIndicator" visible="false"/>
                    </StackPane>
                </center>
                <bottom>
                    <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
                        <FlowPane HBox.hgrow="ALWAYS">
                            <!--<fx:include source="../google/RemoteStatusPane.fxml"/>-->
                        </FlowPane>
                        <Button styleClass="custom-button" fx:id="openButton" onAction="#openInvoice"
                                text="%stage.common.button.open"/>
                        <Button styleClass="custom-button" fx:id="editButton" onAction="#edit"
                                text="%stage.common.button.edit"/>
                        <Button styleClass="custom-button" fx:id="removeButton" onAction="#remove"
                                text="%stage.common.button.remove"/>
                        <Separator orientation="VERTICAL"/>
                        <Button styleClass="custom-button" cancelButton="true" onAction="#close"
                                text="%stage.common.button.close"/>
                        <BorderPane.margin>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="0.0"/>
                        </BorderPane.margin>
                    </HBox>
                </bottom>
            </BorderPane>


        </Scene>
    </scene>
</Stage>