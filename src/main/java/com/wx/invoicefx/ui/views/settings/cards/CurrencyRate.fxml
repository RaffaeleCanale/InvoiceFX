<?xml version="1.0" encoding="UTF-8"?>

<?import com.wx.invoicefx.ui.components.NumberTextField?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.wx.invoicefx.ui.views.settings.cards.CurrencyRateController"
            fx:id="contentPane">

    <left>
        <VBox spacing="10">

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label fx:id="leftLabel" minWidth="-Infinity" HBox.hgrow="NEVER"/>
                <NumberTextField fx:id="rateField" minWidth="100" prefWidth="100.0"/>
                <Label fx:id="rightLabel" minWidth="-Infinity" HBox.hgrow="NEVER"/>
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label fx:id="currentRateLabel" minWidth="-Infinity" />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label fx:id="rateInfoLabel" styleClass="text-disabled-2" minWidth="-Infinity"/>
            </HBox>

        </VBox>

    </left>
    <right>
        <Button onAction="#invertCurrency" prefHeight="75" prefWidth="75" styleClass="right-button">
            <graphic>
                <ImageView fitHeight="32" fitWidth="32">
                    <Image url="/icons/invert.png"/>
                </ImageView>
            </graphic>
        </Button>
    </right>


</BorderPane>
