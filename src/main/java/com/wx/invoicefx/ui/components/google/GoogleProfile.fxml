<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.wx.invoicefx.ui.components.google.GoogleProfileController">

    <top>
        <Label text="Google Drive account"/>
    </top>

    <left>
        <BorderPane BorderPane.alignment="TOP_CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
            </padding>

            <center>
            <ImageView fx:id="imageView" fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true" >
                <clip>
                    <Circle radius="32.0" centerX="32.0" centerY="32.0" />
                </clip>
            </ImageView>
            </center>
        </BorderPane>

    </left>


    <center>


        <VBox alignment="BOTTOM_LEFT" spacing="10.0" BorderPane.alignment="BOTTOM_CENTER" styleClass="google">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>


            <Label fx:id="nameLabel" text="Label"/>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Button fx:id="errorButton" onAction="#viewError"
                        text="%google.button.see_error"/>
                <Button fx:id="mainButton" onAction="#buttonAction" />
            </HBox>

            <!--<fx:include source="RemoteStatusPane.fxml"/>-->
        </VBox>
    </center>

    <!--<padding>-->
    <!--<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>-->
    <!--</padding>-->
</BorderPane>
