<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.scene.web.WebView?>
<?import javafx.stage.Stage?>
<Stage title="%stage.invoices_archive.title" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="com.wx.invoicefx.view.archives.InvoicesArchiveControllerOld">
    <scene>
        <Scene>
            <BorderPane>
                <top>
                    <MenuBar BorderPane.alignment="CENTER">
                        <Menu text="%stage.invoices_archive.menu.file">
                            <MenuItem onAction="#openDirectory" text="%stage.invoices_archive.menu.item_file.open_directory"/>
                            <MenuItem onAction="#advancedView" text="%stage.invoices_archive.menu.item_file.advanced_view"/>
                            <SeparatorMenuItem/>
                            <MenuItem onAction="#close" text="%stage.invoices_archive.menu.item_file.close" />
                        </Menu>
                        <Menu text="%stage.invoices_archive.menu.options">
                            <Menu text="%stage.invoices_archive.menu.item_options.default_action">
                                <RadioMenuItem text="%stage.invoices_archive.menu.item_options.action_open">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="defaultActionGroup"/>
                                    </toggleGroup>
                                </RadioMenuItem>
                                <RadioMenuItem text="%stage.invoices_archive.menu.item_options.action_edit"
                                               toggleGroup="$defaultActionGroup"/>
                            </Menu>
                        </Menu>
                    </MenuBar>
                </top>
                <center>
                    <BorderPane prefHeight="800.0" prefWidth="900.0" BorderPane.alignment="CENTER" >
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                        </padding>
                        <top>
                            <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
                                <padding>
                                    <Insets bottom="20.0" left="0.0" right="0.0" top="0.0"/>
                                </padding>
                                <FlowPane alignment="CENTER_LEFT" hgap="10.0" HBox.hgrow="ALWAYS">
                                    <TextField fx:id="searchField" prefWidth="300" promptText="%stage.invoices_archive.search_field.prompt"/>
                                </FlowPane>
                                <ToggleButton fx:id="invoiceViewToggle" text="%stage.invoices_archive.view_toggle"/>
                            </HBox>
                        </top>
                        <center>
                            <SplitPane fx:id="splitPane" BorderPane.alignment="CENTER">
                                <TableView fx:id="invoicesTable">
                                    <columns>
                                        <TableColumn editable="false" sortable="true" minWidth="70" maxWidth="70" text="%stage.invoices_archive.table_column.id"/>
                                        <TableColumn editable="false" sortable="true" text="%stage.invoices_archive.table_column.clients"/>
                                        <TableColumn editable="false" sortable="true" minWidth="100" maxWidth="300" text="%stage.invoices_archive.table_column.date"/>
                                        <TableColumn editable="false" sortable="true" minWidth="100" maxWidth="300" text="%stage.invoices_archive.table_column.total"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <WebView fx:id="invoiceView"/>
                            </SplitPane>
                        </center>
                        <bottom>
                            <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
                                <padding>
                                    <Insets bottom="0.0" left="0.0" right="0.0" top="20.0"/>
                                </padding>
                                <FlowPane HBox.hgrow="ALWAYS">
                                    <!--<fx:include source="../google/StatusPane.fxml"/>-->
                                </FlowPane>
                                <Button fx:id="removeButton" onAction="#remove" text="%stage.invoices_archive.button.remove"/>
                                <Button fx:id="editButton" onAction="#edit" text="%stage.invoices_archive.button.edit"/>
                                <Button fx:id="openButton" onAction="#open" text="%stage.invoices_archive.button.open"/>
                                <Separator orientation="VERTICAL" />
                                <Button onAction="#close" text="%stage.invoices_archive.button.close" cancelButton="true"/>
                            </HBox>
                        </bottom>
                    </BorderPane>
                </center>
            </BorderPane>
        </Scene>
    </scene>
</Stage>