<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<?import javafx.geometry.Insets?>
<?import com.wx.invoicefx.view.other.sort.SortLabel?>
<?import javafx.scene.Cursor?>
<Stage title="%stage.invoices_archive.title" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="com.wx.invoicefx.view.archives.InvoicesArchiveController">
    <scene>
        <Scene>
            <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="709.0" prefWidth="948.0">
                <top>
                    <MenuBar BorderPane.alignment="CENTER">
                        <Menu text="%stage.invoices_archive.menu.file">
                            <MenuItem onAction="#openDirectory" text="%stage.invoices_archive.menu.item_file.open_directory"/>
                            <MenuItem onAction="#advancedView" text="%stage.invoices_archive.menu.item_file.advanced_view"/>
                            <SeparatorMenuItem/>
                            <MenuItem onAction="#close" text="%stage.invoices_archive.menu.item_file.close" />
                        </Menu>
                    </MenuBar>
                </top>
                <center>
                    <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                        <top>
                            <VBox BorderPane.alignment="CENTER">
                                <children>
                                    <FlowPane hgap="10.0">
                                        <children>
                                            <TextField prefWidth="400.0" promptText="SEARCH"/>
                                            <ToggleButton fx:id="advancedSearchButton" mnemonicParsing="false" text="ToggleButton"/>
                                        </children>
                                        <VBox.margin>
                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                        </VBox.margin>
                                    </FlowPane>
                                    <VBox fx:id="advancedSearchPane" maxHeight="0" minHeight="0" opacity="0" spacing="10.0">
                                        <children>
                                            <FlowPane hgap="10.0">
                                                <children>
                                                    <Label text="CLIENT(S)"/>
                                                    <fx:include source="/com/wx/invoicefx/view/other/autocomplete/AutoCompletePane.fxml" fx:id="clientSearchPane" />
                                                </children>
                                            </FlowPane>
                                            <FlowPane>
                                                <children>
                                                    <CheckBox fx:id="afterDateBox" contentDisplay="RIGHT" mnemonicParsing="false" text="AFTER">
                                                        <graphic>
                                                            <DatePicker fx:id="afterDatePicker"/>
                                                        </graphic>
                                                    </CheckBox>
                                                    <Separator orientation="VERTICAL">
                                                        <FlowPane.margin>
                                                            <Insets left="40.0" right="40.0"/>
                                                        </FlowPane.margin>
                                                    </Separator>
                                                    <CheckBox fx:id="beforeDateBox" contentDisplay="RIGHT" mnemonicParsing="false" text="BEFORE">
                                                        <graphic>
                                                            <DatePicker fx:id="beforeDatePicker"/>
                                                        </graphic>
                                                    </CheckBox>
                                                </children>
                                            </FlowPane>
                                            <FlowPane hgap="10.0">
                                                <children>
                                                    <Label text="MORE THAN"/>
                                                    <TextField fx:id="sumLowerBoundField"/>
                                                    <Label text="LESS THAN"/>
                                                    <TextField fx:id="sumUpperBoundField"/>
                                                </children>
                                            </FlowPane>
                                        </children>
                                        <VBox.margin>
                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                        </VBox.margin>
                                    </VBox>
                                </children>
                            </VBox>
                        </top>
                        <center>
                            <VBox alignment="TOP_CENTER">
                                <children>
                                    <FlowPane hgap="10.0" vgap="10.0">
                                        <children>
                                            <Label text="SORT BY"/>
                                            <SortLabel fx:id="idSortLabel" alignment="CENTER" prefWidth="100.0" text="ID">
                                                <cursor>
                                                    <Cursor fx:constant="HAND"/>
                                                </cursor>
                                            </SortLabel>
                                            <SortLabel fx:id="dateSortLabel" alignment="CENTER" prefWidth="100.0" text="DATE">
                                                <cursor>
                                                    <Cursor fx:constant="HAND"/>
                                                </cursor>
                                            </SortLabel>
                                            <SortLabel fx:id="sumSortLabel" alignment="CENTER" prefWidth="100.0" text="SUM">
                                                <cursor>
                                                    <Cursor fx:constant="HAND"/>
                                                </cursor>
                                            </SortLabel>
                                        </children>
                                        <VBox.margin>
                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                        </VBox.margin>
                                    </FlowPane>
                                    <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                                        <content>
                                            <ListView fx:id="invoicesList"/>
                                        </content>
                                        <VBox.margin>
                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                        </VBox.margin>
                                    </ScrollPane>
                                </children>
                            </VBox>
                        </center>
                    </BorderPane>
                </center>
                <bottom>
                    <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
                        <FlowPane HBox.hgrow="ALWAYS">
                            <!--<fx:include source="../google/StatusPane.fxml"/>-->
                        </FlowPane>
                        <Button fx:id="removeButton" onAction="#remove" text="%stage.invoices_archive.button.remove" />
                        <Button fx:id="editButton" onAction="#edit" text="%stage.invoices_archive.button.edit" />
                        <Button fx:id="openButton" onAction="#open" text="%stage.invoices_archive.button.open" />
                        <Separator orientation="VERTICAL" />
                        <Button cancelButton="true" onAction="#close" text="%stage.invoices_archive.button.close" />
                        <BorderPane.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </BorderPane.margin>
                    </HBox>
                </bottom>
            </BorderPane>


        </Scene>
    </scene>
</Stage>